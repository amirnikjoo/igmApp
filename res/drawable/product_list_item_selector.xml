<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/igm_light_blue" />
        </shape>
    </item>
    <item android:state_long_pressable="true">
        <shape>
            <solid android:color="@color/igm_yellow" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/igm_pure_white" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/igm_dark_blue" />
        </shape>
    </item>

</selector>